.declaration-order {
  /* Позиционирование */
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 100;

  /* Блочная модель */
  display: block;
  float: right;
  width: 100px;
  height: 100px;
  border: 1px solid #e5e5e5;
  border-radius: 3px;

  /* Отображение */
  background-color: #f5f5f5;
  color: #333333;
  text-align: center;

  /* Типографика */
  font: normal 13px "Helvetica Neue", sans-serif;
  line-height: 1.5;

  /* Прочее */
  opacity: 1;
}
